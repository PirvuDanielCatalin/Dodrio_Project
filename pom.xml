<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.javasamples.apps</groupId>
  <artifactId>java-simple-web-page</artifactId>
  <version>1.0.0</version>

  <packaging>war</packaging>
  <name>JavaWebapp</name>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <repositories>
    <repository>
      <id>nexus-public</id>
      <url>http://docker.lab.example.com:8081/nexus/content/groups/public/</url>
    </repository>
  </repositories>

  <distributionManagement>
    <snapshotRepository>
      <id>nexus-snapshots</id>
      <url>http://docker.lab.example.com:8081/nexus/content/repositories/snapshots/</url>
    </snapshotRepository>
    <repository>
      <id>nexus-releases</id>
      <url>http://docker.lab.example.com:8081/nexus/content/repositories/releases/</url>
    </repository>
  </distributionManagement>
  <scm>
    <connection>scm:svn:http://127.0.0.1/dummy</connection>
    <developerConnection>scm:svn:https://127.0.0.1/dummy</developerConnection>
    <tag>HEAD</tag>
    <url>http://127.0.0.1/dummy</url>
  </scm>
  <properties>
    <major.minor.version>1.0</major.minor.version>
  </properties>
  <build>
    <finalName>JavaWebApp</finalName>
    <plugins>
      <plugin>
         <groupId>org.codehaus.gmaven</groupId>
         <artifactId>groovy-maven-plugin</artifactId>
         <executions>
           <execution>
             <id>set-release-version</id>
             <phase>initialize</phase>
             <goals>
              <goal>execute</goal>
             </goals>
            <configuration>
              <source>
                  project.properties.setProperty("releaseVersion","1.0.1")
                  System.out.println("releaseVersion set to 1.0.1")
              </source>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>

